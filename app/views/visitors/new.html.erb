<% content_for :title do %>Paul<% end %>
<% content_for :description do %>Website of Paul Pham<% end %>
<section>
  <%= image_tag "http://lorempixel.com/1170/600/nature/3" %>
  <!-- img src="http://lorempixel.com/1170/600/cats/1"-->
</section>
<section>
  <div class="column">
    <h3>Stay in touch.</h3>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
        <br/>
        <%= f.button :submit, "Sign up for the newsletter", :class => "submit" %>
      <% end %>
    </div>
  </div>
</section>
<!-- <%= %> delimiters, ERB can be used to embed ruby code -->
